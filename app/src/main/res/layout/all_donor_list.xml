<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="5dp"
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                android:id="@+id/donor_profile_image" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/donor_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/chewy"
                    android:text="UserName"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/blood_group_text"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/blue"
                        android:text="Age:-"
                        android:fontFamily="@font/chewy" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/donor_age"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/blue"
                        android:paddingLeft="5dp"
                        android:textColorHint="@color/blue"
                        android:hint="Age" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/address" />

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:text="City:-"
                android:fontFamily="@font/chewy"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:id="@+id/donor_city"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:text="Your City Here"
                android:fontFamily="@font/chewy"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/gender" />

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:text="Email:-"
                android:fontFamily="@font/chewy"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:id="@+id/donor_email"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:text="Your Email Here"
                android:fontFamily="@font/chewy"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/address" />

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:text="Address:-"
                android:fontFamily="@font/chewy"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:id="@+id/donor_address"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:text="Your Address Here"
                android:fontFamily="@font/chewy"
                android:paddingLeft="5dp"
                android:maxLines="5" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>